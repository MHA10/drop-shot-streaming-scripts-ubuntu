{
  "name": "streamer-node",
  "version": "1.0.0",
  "description": "A lightweight TypeScript streaming system with Clean Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/main.js",
    "dev": "npm run build && npm start",
    "monitor": "npm run dev 2>&1 | tee >(grep -E \"ERROR|WARN|INFO\" > node.logs.ts) >(grep \"DEBUG\" | grep -v \"frame=\" > ffmpeg.logs.ts)",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "streaming",
    "ffmpeg",
    "sse",
    "clean-architecture"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
