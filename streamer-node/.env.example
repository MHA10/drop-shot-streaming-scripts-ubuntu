# SSE Configuration
SSE_ENDPOINT=https://api.drop-shot.live/api/v1/padel-grounds/385136f6-7cf0-4e7f-b601-fea90079c227/events
SSE_RETRY_INTERVAL=5000
SSE_MAX_RETRIES=10

# Stream Configuration
PERSISTENT_STATE_DIR=/var/tmp/stream_registry
TEMP_STATE_DIR=/tmp/stream_registry
HEALTH_CHECK_INTERVAL=30000

# FFmpeg Configuration
RTSP_INPUT_PARAMS=-rtsp_transport tcp -use_wallclock_as_timestamps 1 -fflags +genpts
OUTPUT_PARAMS_VIDEO=-c:v libx264 -preset veryfast -tune zerolatency -crf 23 -maxrate 2500k -bufsize 5000k -pix_fmt yuv420p -g 50 -f flv
OUTPUT_PARAMS_AUDIO=-c:a aac -b:a 128k -ar 44100 -ac 2

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/stream_manager.log

# Development
NODE_ENV=development